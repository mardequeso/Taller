package tema3;

/**
 *
 * @author Alumno
 */

public class Triangulo {
    private double lado1, lado2, lado3, perimetro;
    private String colorRelleno, colorLinea;
    
    public Triangulo (double l1, double l2, double l3, String cR, String cL){
        lado1 = l1;
        lado2 = l2;
        lado3 = l3;
        colorRelleno = cR;
        colorLinea = cL;
    }

    public double getLado1() {
        return lado1;
    }

    public void setLado1(double lado1) {
        this.lado1 = lado1;
    }

    public double getLado2() {
        return lado2;
    }

    public void setLado2(double lado2) {
        this.lado2 = lado2;
    }

    public double getLado3() {
        return lado3;
    }

    public void setLado3(double lado3) {
        this.lado3 = lado3;
    }

    public String getColorRelleno() {
        return colorRelleno;
    }

    public void setColorRelleno(String colorRelleno) {
        this.colorRelleno = colorRelleno;
    }

    public String getColorLinea() {
        return colorLinea;
    }

    public void setColorLinea(String colorLinea) {
        this.colorLinea = colorLinea;
    }
    
    public double calcularPerimetro (){
        perimetro = lado1 + lado2 + lado3;
        return perimetro;
    }
    
    public double calcularArea (){
        double s = perimetro / 2.0;
        double area = s * (s âˆ’ lado1) * (s âˆ’ lado2) * (s âˆ’ lado3);
        return Math.sqrt(area);
    }
}
