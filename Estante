package tema3;

/**
 *
 * @author Martina
 */
public class Estante {
    private int DF, DL = 0;
    private Libro[] estante;

    public Estante() {
        
    }
    
    public Estante (int DF){
        this.DF = DF;
        estante = new Libro[DF];
    }
    
    public boolean estaLleno (){
        return (DL == DF);
    }
    
    public void agregarLibro (Libro libro){
        if (!estaLleno()){
            estante [DL] = libro;
            DL++;
        }
        else {
            System.out.println ("El estante está lleno");
        }
    }
    
    public Libro buscarTitulo (String titulo){
        int i = 0;
        while (i < DL && !(estante[i].getTitulo().equals(titulo))){
            i++;
        }
        if (i < DL){
            return estante[i];
        }
        else {
            return null;
        }
    }
     
    public int getCantLibros() {
        return DL;
    }
    
    
}
//3-A- Defina una clase para representar estantes. Un estante almacena a lo sumo 20 libros.
