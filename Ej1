package tema3;

import PaqueteLectura.Lector;

/**
 *
 * @author Alumno
 */
public class Ej1 {
    public static void main(String[] args) {
        System.out.println ("Ingrese lados del triangulo, su color");
        Triangulo tri = new Triangulo(Lector.leerDouble(), Lector.leerDouble(), Lector.leerDouble(), Lector.leerString(), Lector.leerString());
        System.out.println ("El perimetro de triangulo es "+ tri.calcularPerimetro() + " y el area " + tri.calcularArea());
    }
}
