package tema2;

import PaqueteLectura.GeneradorAleatorio;

/**
 *
 * @author alumnos
 */
public class PractEj2 {
    public static void main(String[] args) {
        GeneradorAleatorio.iniciar();
        int i, cant = 0, menorDNI = 101, menorP = -1, edad = GeneradorAleatorio.generarInt(100), DimL = 0, DimF = 15;
        Persona[] v= new Persona[DimF];
        System.out.println ("Edad generada " + edad);
        while (DimL < DimF && edad != 0) {
            v [DimL] = new Persona (GeneradorAleatorio.generarString(5), GeneradorAleatorio.generarInt(100), edad);
            System.out.println("Posicion " + DimL + " "+ v[DimL].toString());
            edad = GeneradorAleatorio.generarInt(100);
            System.out.println ("Edad generada " + edad);
            DimL++;
        }
        for (i = 0; i < DimL; i++){
            if (v[i].getEdad()> 65) {
                System.out.println ("Entré " + v[i].toString());
                cant++;
            }
            if (v[i].getDNI() < menorDNI){
                menorDNI = v[i].getDNI();
                menorP = i;
            }
        }
        System.out.println("La cant de personas mayores de 65 fue " + cant);
        if (menorP != -1){
            System.out.println("Persona con menor DNI: " + v[menorP].toString());
        }
    }
}
//2- Utilizando la clase Persona. Realice un programa que almacene en un vector a lo sumo 15 personas. La información
//(nombre, DNI, edad) se debe generar aleatoriamente hasta obtener edad 0. Luego de almacenar la información:
//- Informe la cantidad de personas mayores de 65 años.
//- Muestre la representación de la persona con menor DNI.
