package tema2;

import PaqueteLectura.GeneradorAleatorio;

/**
 *
 * @author alumnos
 */
public class Ej02 {
    public static void main(String[] args) {
        int i, cant = 0, menorDNI = 101, menorP, edad = GeneradorAleatorio.generarInt(100), DimL = -1, DimF = 15;
        Persona[] personas= new Persona[DimF];
        while (DimL < DimF && edad != 0) {
            DimL++;
            personas [DimL].setEdad(edad);
            personas[DimL].setDNI(GeneradorAleatorio.generarInt(100));
            personas [DimL].setNombre(GeneradorAleatorio.generarString(20));
            edad = GeneradorAleatorio.generarInt(100);
            System.out.println("Posicion " + DimL + personas[DimL].toString());
        }
        for (i = 0; i < DimL; i++){
            if (personas [i].getDNI() > 65) {
                cant++;
            }
            if (personas[i].getDNI() < menorDNI){
                menorDNI = personas[i].getDNI();
                menorP = i;
            }
        }
        System.out.println("La cant de personas mayores de 65 fue" + cant);
        System.out.println("Persona con menor DNI: " + personas[menorP].toString());
    }
}
