programa Ej1
procesos
  proceso juntarFlores(ES flores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:=flores+1
  fin
  proceso juntarPapeles(ES papeles:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:=papeles+1
  fin
  proceso avenida(ES flores:numero)
  variables
    av:numero
  comenzar
    flores:=0
    av:=PosAv
    repetir 96
      juntarFlores(flores)
      mover
    juntarFlores(flores)
    BloquearEsquina(av,98)
    mover
    juntarFlores(flores)
    BloquearEsquina(av,99)
    mover
    LiberarEsquina(av,98)
    juntarFlores(flores)
    mover
    LiberarEsquina(av,99)
    juntarFlores(flores)
  fin
  proceso calle(ES papeles:numero)
  variables
    ca:numero
  comenzar
    papeles:=0
    ca:=PosCa
    juntarPapeles(papeles)
    BloquearEsquina(2,ca)
    mover
    juntarPapeles(papeles)
    BloquearEsquina(3,ca)
    mover
    LiberarEsquina(2,ca)
    juntarPapeles(papeles)
    mover
    LiberarEsquina(3,ca)
    repetir 96
      juntarPapeles(papeles)
      mover
    juntarPapeles(papeles)
  fin
areas
  areaR1:AreaP(2,1,2,97)
  areaR2:AreaP(3,1,3,97)
  areaA1:AreaP(4,98,100,98)
  areaA2:AreaP(4,99,100,99)
  areaJ:AreaP(100,100,100,100)
  riesgoChoque:AreaP(1,98,3,100)
robots
  robot rojo
  variables
    id,flores:numero
  comenzar
    RecibirMensaje(id,rJ)
    avenida(flores)
    EnviarMensaje(id,rJ)
    EnviarMensaje(flores,rJ)
  fin
  robot azul
  variables
    id,papeles:numero
  comenzar
    derecha
    RecibirMensaje(id,rJ)
    calle(papeles)
    EnviarMensaje(id,rJ)
    EnviarMensaje(papeles,rJ)
  fin
  robot jefe
  variables
    r,papeles,flores,objeto: numero
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,a1)
    EnviarMensaje(4,a2)
    papeles:=0
    flores:=0
    repetir 4
      RecibirMensaje(r,*)
      si(r=1)
        RecibirMensaje(objeto,r1)
        flores:=flores+objeto
      sino
        si(r=2)
          RecibirMensaje(objeto,r2)
          flores:=flores+objeto
        sino
          si(r=3)
            RecibirMensaje(objeto,a1)
            papeles:=papeles+objeto
          sino
            RecibirMensaje(objeto,a2)
            papeles:=papeles+objeto
    si(papeles<flores)
      Informar("el equipo ganador fue el ", 1)
    sino
      Informar("el equipo ganador fue el ", 2)
  fin
variables
  r1,r2:rojo
  a1,a2:azul
  rJ:jefe
comenzar
  AsignarArea(r1,areaR1)
  AsignarArea(r1,riesgoChoque)
  AsignarArea(r2,areaR2)
  AsignarArea(r2,riesgoChoque)
  AsignarArea(a1,areaA1)
  AsignarArea(a1,riesgoChoque)
  AsignarArea(a2,areaA2)
  AsignarArea(a2,riesgoChoque)
  AsignarArea(rJ,areaJ)
  Iniciar(r1,2,1)
  Iniciar(r2,3,1)
  Iniciar(a1,1,98)
  Iniciar(a2,1,99)
  Iniciar(rJ,100,100)
fin
{1- Se organiz칩 una competencia entre el equipo rojo y el equipo azul. Cada equipo consta de dos robots, y debe realizar una tarea: - Los robots R1 y R2 del equipo
rojo debe juntar todas las flores de las avenidas 2 y 3 respectivamente - Los robots A1 y A2 del equipo azul debe juntar todos los papeles de las calles 98 y 99 
respectivamente Al finalizar la competencia, un robot fiscalizador deber치 informar el equipo que junt칩 m치s objetos.
