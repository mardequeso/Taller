programa Ej5
procesos
  proceso juntarPapeles (ES papeles: numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:= papeles+1
  fin
  proceso dejarPapeles (ES papeles: numero)
  comenzar
    repetir papeles
      depositarPapel
    papeles:= 0
  fin
  proceso limpiarPapeles (ES papeles:numero; E esquina:numero)
  comenzar
    repetir esquina
      juntarPapeles(papeles)
      mover
    juntarPapeles(papeles)
    Pos(PosAv, PosCa-esquina)
    dejarPapeles(papeles)
  fin
  proceso juntarFlores(ES flores: numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores+1
  fin
  proceso dejarFlores(ES flores: numero)
  comenzar
    repetir flores
      depositarFlor
    flores:= 0  
  fin
  proceso limpiarFlores (ES flores: numero; E esquina: numero)
  comenzar
    repetir esquina
      juntarFlores(flores)
      mover
    juntarFlores(flores)
    dejarFlores(flores)
  fin
  proceso limpiarCa(E esquina:numero)
  variables
    flores:numero
  comenzar
    flores:=0
    esquina:= esquina -1
    derecha
    limpiarFlores(flores, esquina)
    Pos(PosAv-esquina,PosCa+5)
    limpiarFlores(flores,esquina)
  fin
  proceso limpiarAv(E esquina:numero)
  variables
    papeles: numero
  comenzar
    papeles:= 0
    esquina:=esquina-1
    limpiarPapeles(papeles,esquina)
    Pos(PosAv+5,PosCa)
    limpiarPapeles(papeles, esquina)
  fin
areas
  area1: AreaP (1,75,15,80)
  area2: AreaP(75, 81, 80, 100)
  area3: AreaP(71,10,100,15)
  area4: AreaP(10,1,15,15)
robots
  robot robot1
  variables
    esquina: numero
  comenzar
    esquina:= 15
    limpiarCa(esquina)
  fin
  robot robot2
  variables
    esquina: numero
  comenzar
    esquina:= 20
    limpiarAv(esquina)
  fin
  robot robot3
  variables
    esquina: numero
  comenzar
    esquina:=30
    limpiarCa(esquina)
  fin
  robot robot4
  variables
    esquina: numero
  comenzar
    esquina:= 10
    limpiarAv(esquina)
  fin
variables
  r1:robot1
  r2:robot2
  r3:robot3
  r4:robot4
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r2,area2)
  AsignarArea(r3,area3)
  AsignarArea(r4,area4)
  Iniciar(r1,1,75)
  Iniciar(r2,75,81)
  Iniciar(r3,71,10)
  Iniciar(r4,10,1)
fin
