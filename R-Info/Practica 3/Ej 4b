programa Ej4
areas
  esquinaDejar: AreaC(11,11,11,11)
  esquinaJuntar: AreaPC(10,10,10,10)
  areaJ: AreaP(1,1,1,1)
  area1: AreaP(9,9,9,9)
  area2: AreaP(9,10,9,10)
  area3: AreaP(9,11,9,11)
  area4: AreaP(9,12,9,12)
robots
  robot limpiador
  variables
    n, avOriginal, caOriginal:numero
    seguir:boolean
  comenzar
    seguir:=V
    avOriginal:= PosAv
    caOriginal:= PosCa
    RecibirMensaje(n,rJ)
    mientras(seguir)
      BloquearEsquina(10,10)
      Pos(10,10)
      si(HayFlorEnLaEsquina)
        tomarFlor
        Pos(avOriginal,caOriginal)
        LiberarEsquina(10,10)
        BloquearEsquina(11,11)
        Pos(11,11)
        depositarFlor
        Pos(avOriginal,caOriginal)
        LiberarEsquina(11,11)
      sino
        seguir:= F
        Pos(avOriginal,caOriginal)
        LiberarEsquina(10,10)
    EnviarMensaje(n, rJ)
  fin
  robot jefe
  variables
    n, ultimo: numero
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    EnviarMensaje(4,r4)
    repetir 4
      RecibirMensaje(n,*)
    ultimo:= n
    Informar("El ultimo fue ", ultimo)
    BloquearEsquina(11,11)
    Pos(11,11)
    mientras(HayFlorEnLaEsquina)
      tomarFlor
    Pos(1,1)
    LiberarEsquina(11,11)
  fin
variables
  r1,r2,r3,r4: limpiador
  rJ: jefe
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r1,esquinaJuntar)
  AsignarArea(r1,esquinaDejar)
  AsignarArea(r2,area2)
  AsignarArea(r2,esquinaJuntar)
  AsignarArea(r2,esquinaDejar)
  AsignarArea(r3,area3)
  AsignarArea(r3,esquinaJuntar)
  AsignarArea(r3,esquinaDejar)
  AsignarArea(r4,area4)
  AsignarArea(r4,esquinaJuntar)
  AsignarArea(r4,esquinaDejar)
  AsignarArea(rJ,areaJ)
  AsignarArea(rJ,esquinaDejar)
  Iniciar(r1,9,9)
  Iniciar(r2,9,10)
  Iniciar(r3,9,11)
  Iniciar(r4,9,12)
  Iniciar(rJ,1,1)
fin
{b- Implemente una variante en la cual los robots luego de tomar cada flor de la esquina (10,10) vuelvan a su esquina inicial, pasen a la esquina (11,11) a 
depositarla y finalmente vuelvan a la esquina inicial.
